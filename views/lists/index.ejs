<% layout("/layouts/boilerplate") -%>
    <h3>All Lists</h3>
    <!-- <form method="get" action="/lists/new">
        <button>Create New List</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% for(let list of allLists){ %>
        <a href="/lists/<%= list._id%>" class="list-link">
          <div class="card col list-card" >
            <img src= "<%=list.image%>" class="card-img-top" alt="list_image" style="height: 20rem;"/>
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= list.title %><br/></b>
                &#8377;<%= list.price.toLocaleString("en-IN") %> per day
              </p>
            </div>
          </div>
        </a>
        <% } %>
      </div>
    

