<% if(success && success.length){ %>
<div class="alert alert-success mt-3 alert-dismissable fade show col-6 offset-3" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="position: absolute; right: 1rem; top: 0.75rem"></button>
</div>
<% } %>

<% if(error && error.length){ %>
    <div class="alert alert-danger mt-3 alert-dismissable fade show col-6 offset-3" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="position: absolute; right: 1rem; top: 0.75rem"></button>
    </div>
    <% } %>
    